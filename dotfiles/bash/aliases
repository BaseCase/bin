alias ls="ls -FGC" # add / to dirs, enable color, columns
alias la="ls -a" # include hidden
alias ll="ls -lh" # long with human-readable file size
alias lal="ls -al" # you can figure this one out

alias e="/Applications/Emacs.app/Contents/MacOS/bin/emacsclient"
alias ee="e -n" # don't wait to finish editing

alias h="history"
alias hl="history | less"

alias tu="top -o cpu" # cpu
alias tm="top -o vsize" # memory

alias g="git status"
alias gitc="git diff --cached"

alias ...="cd .."
alias cdd="cd -"
alias pu="pushd"
alias po="popd"

alias reload="source ~/.bashrc"
alias manage="ee ~/Dropbox/bin/dotfiles/bash"

alias p="pbcopy"

alias rm="safe_rm"

alias grp="easy_grep"

function take {
    mkdir $1
    cd $1
}

function easy_grep {
    grep -nIr $1 .
}

# stolen from http://jayallen.org/journey/2006/03/mac_os_x_rm_files_to_trash
safe_rm() # Safe rm procedure
{
    # Cycle through each argument for deletion
    for file in $*; do
        if [ -e $file ]; then

            # Target exists and can be moved to Trash safely
            if [ ! -e ~/.Trash/$file ]; then
                mv $file ~/.Trash

            # Target exists and conflicts with target in Trash
            elif [ -e ~/.Trash/$file ]; then

                # Increment target name until 
                # there is no longer a conflict
                i=1
                while [ -e ~/.Trash/$file.$i ];
                do
                    i=$(($i + 1))
                done

                # Move to the Trash with non-conflicting name
                mv $file ~/.Trash/$file.$i
            fi

        # Target doesn't exist, return error
        else
            echo "rm: $file: No such file or directory";
        fi
    done
}

#!/bin/bash


export PATH="\
/usr/bin:\
/bin:\
/usr/sbin:\
/sbin:\
/usr/local/bin:\
/usr/local/sbin:\
/Users/cjb/bin/scripts:\
"

export EDITOR="vim"
export NODE_PATH="/usr/local/lib/node_modules"

# no .pyc files
export PYTHONDONTWRITEBYTECODE=1

# lots of history, and append it to histfile instead of overwriting
export HISTSIZE=100000
shopt -s histappend


##########
# ALIASES
##########

# git aliases
alias g="git status"
alias gfg="git fetch github"
alias gitc="git diff --cached"

# open this project on github
alias gho="github_open.sh"

# merge github version of this branch with local
alias gm="git_merge_current_remote_branch"

# spelling is hard
alias gtci="gitc"
alias gtic="gitc"

# grep stuff
alias grep="grep --color=auto -E"
alias jsgrep='find . -type f -and \( -name "*.coffee" -or -name "*.js" -or -name "*.hbs" \) -print0 | xargs -0 grep'
alias pygrep='find . -type f -and -name "*.py" -and -not -path "*migrations*" -print0 | xargs -0 grep'

# ls better
alias ls="ls -FGC"
alias l="ls -lh"
alias la="l -a"

# random helpers
alias e="/Applications/Emacs.app/Contents/MacOS/bin/emacsclient -n"
alias json="python -m json.tool"
alias msp="./manage.py shell_plus"
alias p="pbcopy"
alias x="xargs"


#########
# Prompt
#########

NO_COLOR='\e[0m'
EYELLOW='\e[1;33m'
PS1="\n\u:\w \[$EYELLOW\]\$(vcprompt)\[$NO_COLOR\] \n$ "


source $CJB_BIN/scripts/git-completion.bash
source $CJB_BIN/scripts/random_functions.sh
source $CJB_BIN/local_bash_config


export PATH="\
/usr/bin:\
/bin:\
/usr/sbin:\
/sbin:\
/usr/local/bin:\
/usr/local/sbin:\
/Users/cjb/bin/scripts:\
"

export EDITOR=/Applications/Emacs.app/Contents/MacOS/bin/emacsclient
export HISTFILESIZE=1000000
export NODE_PATH="/usr/local/lib/node_modules"

alias e=$EDITOR
alias forward="$CJB_BIN/scripts/forward_port.sh"
alias g="git status"
alias gfg="git fetch github"
alias gho="github_open.sh"
alias gitc="git diff --cached"
alias ls="ls -FGC"
alias ll="ls -lh"
alias lal="ll -a"
alias p="pbcopy"
alias venv="source venv/bin/activate"

# prompt is this:
# cjb:~/bin [git:master+]
# $
NO_COLOR='\e[0m'
EYELLOW='\e[1;33m'
PS1="\n\u:\w \[$EYELLOW\]\$(vcprompt)\[$NO_COLOR\] \n$ "

source $CJB_BIN/scripts/git-completion.bash
source $CJB_BIN/local_bash_config

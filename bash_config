#!/bin/bash


export PATH="\
/usr/bin:\
/bin:\
/usr/sbin:\
/sbin:\
/usr/local/bin:\
/usr/local/sbin:\
/Users/cjb/bin/scripts:\
"

export EDITOR="vim"
export HISTFILESIZE=1000000
export NODE_PATH="/usr/local/lib/node_modules"

alias djgrep='find . -name "*.py" -and -not -path "*migrations*" | xargs grep -E --color=auto'
alias e="/Applications/Emacs.app/Contents/MacOS/bin/emacsclient -n"
alias forward="$CJB_BIN/scripts/forward_port.sh"
alias g="git status"
alias gfg="git fetch github"
alias gho="github_open.sh"
alias gitc="git diff --cached"
alias gm="git_merge_current_remote_branch"
alias grep="grep --color=auto"
alias gtci="gitc"
alias gtic="gitc"
alias json="python -m json.tool"
alias l="ls -lh"
alias lal="l -a"
alias ls="ls -FGC"
alias msp="./manage.py shell_plus"
alias p="pbcopy"
alias plz="sudo"
alias venv="source venv/bin/activate"
alias vim="vim -N"
alias x="xargs"

# prompt is this:
# cjb:~/bin [git:master+]
# $
NO_COLOR='\e[0m'
EYELLOW='\e[1;33m'
PS1="\n\u:\w \[$EYELLOW\]\$(vcprompt)\[$NO_COLOR\] \n$ "

source $CJB_BIN/scripts/git-completion.bash
source $CJB_BIN/scripts/random_functions.sh
source $CJB_BIN/local_bash_config

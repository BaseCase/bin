set nocompatible
autocmd!
filetype on
filetype plugin on
filetype indent on
set hidden
set showmode
set lazyredraw
set background=dark
syntax enable
highlight LineNr ctermfg=darkGrey
set hlsearch
set ruler
set ignorecase smartcase
set incsearch
set cmdheight=2
autocmd BufWritePre * :%s/\s\+$//e
set tabstop=4
set expandtab
set shiftwidth=4

" make j and k behave on visual lines, not numeric lines
map j gj
map k gk

colorscheme vividchalk
set scrolloff=3
set winwidth=80
let mapleader=","

map <DOWN> <C-E>
map <UP> <C-Y>
command Q q

" associate .md extension with markdown syntax
autocmd BufNewFile,BufRead *.md setlocal filetype=markdown
autocmd BufNewFile,BufRead local_bash_config setlocal filetype=sh

" "Overview" for Python files. Deletes all lines not beginning with 'class' or
map <leader>o :v,\v^\s*(def\|class),d<CR>

set showtabline=2

